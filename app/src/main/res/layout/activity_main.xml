<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:text="@string/button1"
            android:tag="1"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:tag="2"
            android:text="@string/button2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:text="@string/button3"
            android:tag="3"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="@string/buttonPlus"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button4"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button6" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="@string/buttonMinus" />

        <Button
            android:id="@+id/button7"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button7"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/button9" />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="@string/buttonMulti" />

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="@string/buttonDec"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/button0"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="@string/button0" />

        <Button
            android:id="@+id/buttonDivi"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="@string/buttonDivi"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonNeg"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:text="@string/buttonNeg"
            app:layout_column="2"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:text="@string/buttonClear" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buttonBack" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:text="@string/buttonEquals" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFormula"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormula" />

</androidx.constraintlayout.widget.ConstraintLayout>